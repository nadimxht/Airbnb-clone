{% extends 'base.html.twig'%}

{% block title %}Création d'une annonce{% endblock %}

{% form_theme form 'ad/_collection.htm.twig' %}

{% block body %}
    <div class="container">
                <h1 class=" h1 mt-5 mb-5">Créer une nouvelle annonce</h1>

                {{ form_start(form) }}

                    {{ form_widget(form) }}

                    <button type="submit" class="btn btn-primary mt-2">Créer la nouvelle annonce</button>

                {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/ad.js') }}"></script>

{% endblock %}
